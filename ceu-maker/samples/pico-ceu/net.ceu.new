emit WINDOW_SET_SIZE(640,480,640,480);
emit GRAPHICS_SET_FONT("tiny.ttf", 20);

par do
    var&[] byte msg;
    every msg in NET_RECEIVE do
        emit GRAPHICS_WRITE("recv: ");
        emit GRAPHICS_WRITELN(&msg);
    end
with
    loop do
        await 1s;
        var[] byte msg1 = [].."ola";
        emit NET_SEND(4, &msg1);
        var[] byte msg2 = [].."mundo";
        emit NET_SEND(6, &msg2);
    end
end
